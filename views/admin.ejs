<%- include('partials/head', { title: 'Administration' }) %>

<body>
  <%- include('partials/header-nav', {name: username}) %>
  <div id="page-container" class="container">
    <div class='row'>

      <div class='col'>
        <h2>Email User Registration Form</h2>
        <form class="form" id="send-register-form" action="/admin/send-email" method="post">
          <div class="form-row">
            <div class='col'>
              <input type="email" class="form-control" name='email' id='email'
                placeholder="Enter email">
            </div>
            <div class='col'>
              <div class="form-check">
                <input type="checkbox" class="form-check-input" name="adminCheck" id="adminCheck">
                <label class="form-check-label" for="adminCheck">Make Admin</label>
              </div>
            </div>
          </div>
          <button type="submit" class="btn btn-primary mt-1">Send</button>
        </form>
      </div>

    </div>
    <h3>Current Users</h3>
    <div class="container mt-3">
      <div class="row">
        <% for (user of users) { %>
        <%-  include('partials/single-user.ejs', { user }) %>
        <% } %>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>
</body>
