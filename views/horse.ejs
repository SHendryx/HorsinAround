<%- include('partials/head', { title: 'Horse Profile', css: 'horse' }) %>

<body>
  <%- include('partials/header-nav') %>
  <div class="modal fade" id="modelId" tabindex="-1" role="dialog" aria-labelledby="modelTitleId"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Confirm Deletion</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          Are you sure you want to delete <%=horse.name%>?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
          <form action='/horse/delete/<%=horse.id%>' method="POST">
            <button type="submit" class="btn btn-primary">Yes</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <div id="page-container" class="container-fluid">
    <%# Horse Summary %>
    <div class="container form">
      <div class="dropdown" align="right">
        <button class="btn dropdown-toggle fa fa-edit" type="button"
          data-toggle="dropdown"></button>
        <ul class="dropdown-menu">
          <form action="/horse/<%= horse.id %>/update" method="GET">
            <button type="submit" class="dropdown-item">Update</button>
          </form>
          <button type="button" class="dropdown-item" data-toggle="modal" data-target="#modelId">
            Delete Horse
          </button>
        </ul>
      </div>
      <div class="row">
        <div class="col-sm-4">
          <img alt="Horse" class="img-fluid float-left"
            src=<%= horse.image === undefined ? "../public/images/horse_profile.png" : horse.image.url %> />
        </div>
        <div class="col-sm-4">
          <table class="table table-borderless">
            <thead>
              <tr></tr>
            </thead>
            <tbody>
              <tr>
                <th scope="row">Name:</th>
                <td><%= horse.name %></td>
              </tr>
              <tr>
                <th scope="row">Gender</th>
                <td><%= horse.gender %></td>
              </tr>
              <tr>
                <th scope="row">Temperament</th>
                <td><%= horse.temperament %></td>
              </tr>
              <tr>
                <th scope="row">Discipline</th>
                <td><%= horse.discipline%></td>
              </tr>
              <tr>
                <th scope="row">Location</th>
                <td><%= horse.location %></td>
              </tr>
              <tr>
                <th scope="row">Owner</th>
                <td><%= horse.owner %></td>
              </tr>
              <tr>
                <th scope="row">Vet</th>
                <td><%= horse.vet %></td>
              </tr>
              <tr>
                <th scope="row">History</th>
                <td><%= horse.history %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <%# Horse Medical Analysis %>

    <div class="container form">
      <div class="row justify-content-center">
        <div class="pad">
          <a class="btn btn-dark" data-toggle="collapse" href="#medical" role="button"
            aria-expanded="false" aria-controls="medical">
            Show Medical Analysis
          </a>
        </div>
        <div class="pad">
          <a type="button" class="btn" href="/horse/<%= horse.id %>/new-medical-analysis">New
            Medical Analysis</a>
        </div>
      </div>

      <div class="collapse" id="medical">
        <% if(medical !== undefined) { %>
        <div class="row">
          <div class="col-sm-4">
            <h1>Medical Analysis</h1>
          </div>
          <div class="col-sm-4">
            <h1>Date:
              <%= `${medical.date.getMonth() + 1}/${medical.date.getDate()}/${medical.date.getFullYear()}` %>
            </h1>
          </div>
          <div class="col-sm-4">
            <h1>Farrier: <%= medical.farrier %></h1>
          </div>
        </div>
        <%- include('partials/medical-input-fields', {editable: false}) %>
        <% } else { %>
        <div align="center">
          <H2> No medical reports have been created</H2>
        </div>
        <% } %>
      </div>
    </div>

    <%# Horse Most Recent Shoeing %>
    <div class="container form">
      <div class="row justify-content-center">
        <div class="pad">
          <a class="btn btn-dark" data-toggle="collapse" href="#shoeing" role="button"
            aria-expanded="false" aria-controls="medical">
            Show Most Recent Shoeing Report
          </a>
        </div>
        <div class="pad">
          <a type="button" class="btn btn-dark" href="/horse/<%= horse.id %>/new-shoeing">New
            Shoeing</a>
        </div>
      </div>
      <div id="shoeing" class="collapse">
        <% if(shoeings.length > 0) { %>
        <% let mostRecentShoeing = shoeings[0]%>
        <div class="row">
          <div class="col-sm-4">
            <h2>Most Recent Shoeing</h2>
          </div>
          <div class="col-sm-4">
            <h1>Date:
              <%= `${mostRecentShoeing.date.getMonth() + 1}/${mostRecentShoeing.date.getDate()}/${mostRecentShoeing.date.getFullYear()}` %>
            </h1>
          </div>
          <div class="col-sm-4">
            <h2>Farrier: Steve</h2>
          </div>
        </div>

        <%# Shoeing Data %>
        <div class="row">
          <div class="col-sm-6 form">
            <% horse.data.hoof = "Front Left" %>
            <%- include('partials/shoeing', horse.data) %>
          </div>

          <div class="col-sm-6 form">
            <% horse.data.hoof = "Front Right" %>
            <%- include('partials/shoeing', horse.data) %>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-6 form">
            <% horse.data.hoof = "Back Left" %>
            <%- include('partials/shoeing', horse.data) %>
          </div>

          <div class="col-sm-6 form">
            <% horse.data.hoof = "Back Right" %>
            <%- include('partials/shoeing', horse.data) %>
          </div>
        </div>
        <% } else { %>
        <div align="center">
          <H2> No Shoeing reports have been created</H2>
        </div>
        <% } %>
      </div>
      <div class="accordion" id="shoeings-accordian">

        <!--Will be populated with all the shoeings done on a horse-->
        <% for (const singleShoeing of shoeings) { %>
        <%-  include('partials/shoeing-thumbnail', {singleShoeing}) %>
        <% } %>

      </div>
      <div id="all-report-button">
        <a type="button" class="btn"
           href="/horse/<%= horse.id %>/view-report">View Report</a>
      </div>

    </div>
  </div>
  <%- include('partials/footer') %>
</body>
