<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Horse Profile View</title>

    <%- include('partials/head') %>
  </head>

  <body>
  <%- include('partials/header-nav') %>

  <div class="container-fluid">
    <!-- Horse Summary-->
    <div class="container hprofile">
      <div class="row">
        <div class="col-sm-4">
          <img alt="Horse" class="img-fluid float-left" src="../public/images/horse_profile.png" />
        </div>

        <% var horse = {name:"Secretariat", gender:"Male", temperament:"Docile", discipline:"Hunt Seat", location:"9876 Countysun Road, Creek Town, CA", owner:"Meadow Stables", vet:"John Buck"}%>

        <div class="col-sm-4">
          <table class="table table-borderless">
            <thead>
              <tr></tr>
            </thead>
            <tbody>
              <tr>
                <th scope="row">Name:</th>
                <td><%= horse.name %></td>
              </tr>
              <tr>
                <th scope="row">Gender</th>
                <td><%= horse.gender %></td>
              </tr>
              <tr>
                <th scope="row">Temperament</th>
                <td><%= horse.temperament %></td>
              </tr>
              <tr>
                <th scope="row">Discipline</th>
                <td><%= horse.discipline%></td>
              </tr>
              <tr>
                <th scope="row">Location</th>
                <td><%= horse.location %></td>
              </tr>
              <tr>
                <th scope="row">Owner</th>
                <td><%= horse.owner %></td>
              </tr>
              <tr>
                <th scope="row">Vet</th>
                <td><%= horse.vet %></td>
              </tr>
            </tbody>
          </table>

          <table class="table">
            <thead>
              <tr></tr>
            </thead>
            <tbody></tbody>
          </table>
        </div>
      </div>
    </div>


    <!–– Horse Medical Analysis ––>

    <% var medicalAnalysis = {date: "11/13/19", farrier: "Steve", gait: "Lorem Ipsum", lameness: "Lorem Ipsum", blemishes: "Lorem Ipsum", laminitus: "Lorem Ipsum"} %>

    <div class="container hprofile">
      <div class="row justify-content-center">
        <a class="btn btn-dark" data-toggle="collapse" href="#medical" role="button" aria-expanded="false" aria-controls="medical">
          Show Medical Analysis
        </a>
      </div>

      <div class="collapse" id="medical">
      <div class="row">
        <div class="col-sm-4">
          <h1>Medical Analysis</h1>
        </div>
        <div class="col-sm-4">
          <h1>Date: <%= medicalAnalysis.date%></h1>
        </div>
        <div class="col-sm-4">
          <h1>Farrier: <%= medicalAnalysis.farrier %></h1>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-12">
          <h4>Gait Analysis</h4>
          <p><%= medicalAnalysis.gait%></p>

          <h4>Lameness</h4>
          <p><%= medicalAnalysis.lameness %></p>

          <h4>Blemishes</h4>
          <p><%= medicalAnalysis.blemishes %></p>

          <h4>Laminitus</h4>
          <p><%= medicalAnalysis.laminitus%></p>
        </div>
      </div>
      </div>
    </div>

    <!–– Horse Most Recent Shoeing ––>
    <div class="container hprofile" >
      <div class="row">
        <div class="col-sm-4">
          <h1>Recent Shoeing</h1>
        </div>
        <div class="col-sm-4">
          <h1>Date: 11/13/19</h1>
        </div>
        <div class="col-sm-4">
          <h1>Farrier: Steve</h1>
        </div>
      </div>

      <!-- Shoeing Data -->
      <div class="row">
        <div class="col-sm-6 shoeing">
            <% var data = {hoof: "Front Left", hoofImage1: "../public/images/hoof.jpg", hoofImage2: "../public/images/hoof.jpg", shoeType: "Fuller", shoeSize: 7, notes: "Lorem Ipsum is simply dummy text of the printing and typesetting industry."} %>
            <%- include('partials/shoeing', data ) %>
        </div>

          <div class="col-sm-6 shoeing">
            <% data.hoof = "Front Right"%>
            <%- include('partials/shoeing', data ) %>
          </div>
        </div>

      <div class="row">
        <div class="col-sm-6 shoeing">
          <% data.hoof = "Back Left"%>
          <%- include('partials/shoeing', data ) %>
        </div>

        <div class="col-sm-6 shoeing">
          <% data.hoof = "Back Right"%>
          <%- include('partials/shoeing', data ) %>
        </div>
      </div>
    </div>
  </div>
  <%- include('partials/footer') %>
  </body>
</html>
