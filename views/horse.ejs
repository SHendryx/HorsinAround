<%- include('partials/head', { title: 'Horse Profile', css: 'horse' }) %>

<body>
  <%- include('partials/header-nav') %>
  <div id="page-container" class="container-fluid">
    <%# Horse Summary %>
    <div class="container form">
      <div class="dropdown" align="right">
        <button class="btn dropdown-toggle fa fa-edit" type="button"
          data-toggle="dropdown"></button>
        <ul class="dropdown-menu">
          <li><a href="/horse/<%= horse.id %>/update">Update</a></li>
          <li><a href="#">Delete (does not work yet)</a></li>
        </ul>
      </div>
      <div class="row">
        <div class="col-sm-4">
          <img alt="Horse" class="img-fluid float-left"
            src=<%= horse.image === undefined ? "../public/images/horse_profile.png" : horse.image.url %> />
        </div>
        <div class="col-sm-4">
          <table class="table table-borderless">
            <thead>
              <tr></tr>
            </thead>
            <tbody>
              <tr>
                <th scope="row">Name:</th>
                <td><%= horse.name %></td>
              </tr>
              <tr>
                <th scope="row">Gender</th>
                <td><%= horse.gender %></td>
              </tr>
              <tr>
                <th scope="row">Temperament</th>
                <td><%= horse.temperament %></td>
              </tr>
              <tr>
                <th scope="row">Discipline</th>
                <td><%= horse.discipline%></td>
              </tr>
              <tr>
                <th scope="row">Location</th>
                <td><%= horse.location %></td>
              </tr>
              <tr>
                <th scope="row">Owner</th>
                <td><%= horse.owner %></td>
              </tr>
              <tr>
                <th scope="row">Vet</th>
                <td><%= horse.vet %></td>
              </tr>
              <tr>
                <th scope="row">History</th>
                <td><%= horse.history %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <%# Horse Medical Analysis %>

    <div class="container form">
      <div class="row justify-content-center">
        <div class="pad">
          <a class="btn btn-dark" data-toggle="collapse" href="#medical" role="button"
            aria-expanded="false" aria-controls="medical">
            Show Medical Analysis
          </a>
        </div>
        <div class="pad">
          <a type="button" class="btn" href="/horse/<%= horse.id %>/new-report">
            New Medical Analysis
          </a>
        </div>
      </div>
      <% if (shoeing !== undefined) { %>
      <!--If shoeing is undefined-->
      <div class="collapse" id="medical">
        <% if (shoeing.medical !== undefined) { %>
        <div class="row">
          <div class="col-sm-4">
            <h1>Medical Analysis</h1>
          </div>
          <div class="col-sm-4">
            <h1>Date:
              <%= `${shoeing.date.getMonth() + 1}/${shoeing.date.getDate()}/${shoeing.date.getFullYear()}` %>
            </h1>
          </div>
          <div class="col-sm-4">
            <h1>Farrier: <%= shoeing.farrier %></h1>
          </div>
        </div>
        <%- include('partials/medical-input-fields', {medical: shoeing.medical, editable: false}) %>
        <% } else { %>
        <div align="center">
          <H2> No medical reports have been created</H2>
        </div>
        <% } %>
        <% } %>
        <!--If shoeing is undefined-->
      </div>
    </div>

    <%# Horse Most Recent Shoeing %>
    <div class="container form">
      <div class="row justify-content-center">
        <div class="pad">
          <a class="btn btn-dark" data-toggle="collapse" href="#shoeing" role="button"
            aria-expanded="false" aria-controls="medical">
            Show Shoeing Report
          </a>
        </div>
        <div class="pad">
          <a type="button" class="btn btn-dark" href="/horse/<%= horse.id %>/new-report">
            New Shoeing
          </a>
        </div>
      </div>
      <% if (shoeing !== undefined) { %>
      <!--If shoeing is undefined-->
      <div id="shoeing" class="collapse">
        <% if (shoeing.front !== undefined) { %>
        <div class="row">
          <div class="col-sm-4">
            <h2>Most Recent Shoeing</h2>
          </div>
          <div class="col-sm-4">
            <h1>Date:
              <%= `${shoeing.date.getMonth() + 1}/${shoeing.date.getDate()}/${shoeing.date.getFullYear()}` %>
            </h1>
          </div>
          <div class="col-sm-4">
            <h2>Farrier: <%= shoeing.farrier %></h2>
          </div>
        </div>

        <%# Shoeing Data %>
        <div class="row">
          <div class="col-sm-6 form">
            <%- include('partials/shoeing', {area: 'Front Left', hoof: shoeing.front.horseshoes[0]}) %>
          </div>

          <div class="col-sm-6 form">
            <%- include('partials/shoeing', {area: 'Front Right', hoof: shoeing.front.horseshoes[1]}) %>
          </div>
        </div>
        <% } %>

        <% if (shoeing.back !== undefined) { %>
        <div class="row">
          <div class="col-sm-6 form">
            <%- include('partials/shoeing', {area: 'Back Left', hoof: shoeing.back.horseshoes[0]}) %>
          </div>

          <div class="col-sm-6 form">
            <%- include('partials/shoeing', {area: 'Back Right', hoof: shoeing.back.horseshoes[1]}) %>
          </div>
        </div>

        <% } else if (shoeing.front === undefined && shoeing.back === undefined) { %>
        <div align="center">
          <H2> No Shoeing reports have been created</H2>
        </div>
        <% } %>
      </div>
      <% } %>
      <!--If shoeing is undefined-->
    </div>
  </div>
  <%- include('partials/footer') %>
</body>
