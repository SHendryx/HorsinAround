<%- include('partials/head', { title: 'Horse Profile', css: 'horse' }) %>

<body>
  <%- include('partials/header-nav', {name: username}) %>

  <% const medicalAnalysis = {}%>

  <div id="page-container" class="container-fluid">
    <%# Horse Summary %>
    <div class="container form">
      <div class="row">
        <div class="col-sm-4">
          <img alt="Horse" class="img-fluid float-left" src="../public/images/horse_profile.png" />
        </div>
        <div class="col-sm-4">
          <table class="table table-borderless">
            <thead>
              <tr></tr>
            </thead>
            <tbody>
              <tr>
                <th scope="row">Name:</th>
                <td><%= horse.name %></td>
              </tr>
              <tr>
                <th scope="row">Gender</th>
                <td><%= horse.gender %></td>
              </tr>
              <tr>
                <th scope="row">Temperament</th>
                <td><%= horse.temperament %></td>
              </tr>
              <tr>
                <th scope="row">Discipline</th>
                <td><%= horse.discipline%></td>
              </tr>
              <tr>
                <th scope="row">Location</th>
                <td><%= horse.location %></td>
              </tr>
              <tr>
                <th scope="row">Owner</th>
                <td><%= horse.owner %></td>
              </tr>
              <tr>
                <th scope="row">Vet</th>
                <td><%= horse.vet %></td>
              </tr>
            </tbody>
          </table>

          <table class="table">
            <thead>
              <tr></tr>
            </thead>
            <tbody></tbody>
          </table>
        </div>
      </div>
    </div>
    <%# Horse Medical Analysis %>

    <div class="container form">
      <div class="row justify-content-center">
        <div class="pad">
          <a class="btn btn-dark" data-toggle="collapse" href="#medical" role="button"
            aria-expanded="false" aria-controls="medical">
            Show Medical Analysis
          </a>
        </div>
        <div class="pad">
          <a type="button" class="btn btn-dark"
            href="/horse/<%= horse.id %>/new-medical-analysis">New Medical Analysis</a>
        </div>
      </div>

      <div class="collapse" id="medical">
        <div class="row">
          <div class="col-sm-4">
            <h1>Medical Analysis</h1>
          </div>
          <div class="col-sm-4">
            <% const date = new Date() %>
            <h1>Date: <%= `${date.getMonth() + 1}/${date.getDate()}/${date.getFullYear()}` %></h1>
          </div>
          <div class="col-sm-4">
            <h1>Farrier: <%= medicalAnalysis.farrier %></h1>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-12">
            <h4>Gait Analysis</h4>
            <p><%= medicalAnalysis.gait %></p>

            <h4>Lameness</h4>
            <p><%= medicalAnalysis.lameness %></p>

            <h4>Blemishes</h4>
            <p><%= medicalAnalysis.blemishes %></p>

            <h4>Laminitus</h4>
            <p><%= medicalAnalysis.laminitus %></p>
          </div>
        </div>
      </div>
    </div>

    <%# Horse Most Recent Shoeing %>
    <div class="container form">
      <div class="row justify-content-center">
        <div class="pad">
          <a class="btn btn-dark" data-toggle="collapse" href="#shoeing" role="button"
            aria-expanded="false" aria-controls="medical">
            Show Shoeing Report
          </a>
        </div>
        <div class="pad">
          <a type="button" class="btn btn-dark" href="/new-shoeing">New Shoeing</a>
        </div>
      </div>
      <div id="shoeing" class="collapse">
        <div class="row">
          <div class="col-sm-4">
            <h1>Recent Shoeing</h1>
          </div>
          <div class="col-sm-4">
            <h1>Date: 11/13/19</h1>
          </div>
          <div class="col-sm-4">
            <h1>Farrier: Steve</h1>
          </div>
        </div>

        <%# Shoeing Data %>
        <div class="row">
          <div class="col-sm-6 shoeing">
            <% horse.data.hoof = "Front Left" %>
            <%- include('partials/shoeing', horse.data) %>
          </div>

          <div class="col-sm-6 shoeing">
            <% horse.data.hoof = "Front Right" %>
            <%- include('partials/shoeing', horse.data) %>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-6 shoeing">
            <% horse.data.hoof = "Back Left" %>
            <%- include('partials/shoeing', horse.data) %>
          </div>

          <div class="col-sm-6 shoeing">
            <% horse.data.hoof = "Back Right" %>
            <%- include('partials/shoeing', horse.data) %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include('partials/footer') %>
</body>
