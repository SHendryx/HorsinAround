<%#
    This creates all of the checkboxes for the shoeing form.

    passes variable names as keys to the checkbox template. Used to store selected checkbox values as an array of values. 
    Key: name, value: String if only one checkbox is selected, [String] if multiple values per key.

    Example: include('partials/shoeing-checkboxes' {shoesName: 'frontShoes', mName: 'frontMaterials', sName: 'frontServices'})
%>

<div class="col-lg-4">
    <label for="<%= shoesName %>">
        <H3>Shoes</H3>
    </label>
    <div name="shoes" class="checkbox-inline">
        <%- include('checkbox', {name:shoesName, value:"pads", displayName:"Pads"}) %>
        <%- include('checkbox',{name:shoesName,value:"straightbarshoe",displayName:"Straight Bar Shoe"})%>
        <%- include('checkbox', {name:shoesName, value: "eggbar", displayName: "Egg Bar"}) %>
        <%- include('checkbox', {name:shoesName, value: "specialbarshoe", displayName:"Specialty Barshoe"}) %>
        <%- include('checkbox', {name:shoesName, value: "rolledtoe", displayName:"Rolled Toe"}) %>
        <%- include('checkbox', {name:shoesName, value: "onionheel", displayName:"Onion Heel"}) %>
        <%- include('checkbox', {name:shoesName, value: "wideweb", displayName: "Wide Web"}) %>
        <%- include('checkbox', {name:shoesName, value: "narrowweb", displayName:"Narrow Web"}) %>
    </div>
</div>
<div class="col-lg-4">
    <label for="<%= mName %>">
        <H3>Materials</H3>
    </label>
    <div name="materials" class="checkbox-inline">
        <%- include('checkbox', {name:mName, value: "limbbrace", displayName:"Limb Brace"}) %>
        <%- include('checkbox', {name:mName, value: "aluminium", displayName:"Aluminium"}) %>
        <%- include('checkbox', {name:mName, value: "titanium", displayName:"Titanium"}) %>
        <%- include('checkbox', {name:mName, value: "poly", displayName:"Poly"}) %>
        <%-include('checkbox',{name:mName,value:"impressionmaterials",displayName:"Impression Materials"})%>
        <%- include('checkbox', {name:mName, value: "glueonshoes",displayName: "Glue-on Shoe"}) %>
        <%- include('checkbox', {name:mName, value: "equilibrium",displayName: "Equilibrium"}) %>
        <%- include('checkbox', {name:mName, value: "pourin", displayName:"Pour In"}) %>
        <%- include('checkbox', {name:mName, value: "glue", displayName:"Glue"}) %>
    </div>
</div>
<div class="col-lg-4">
    <label for="<%= sName %>">
        <H3>Services</H3>
    </label>
    <div name="services" class="checkbox-inline">
        <%- include('checkbox',{name:sName,value:"drilltap",displayName:"Drill & Tap"})%>
        <%- include('checkbox',{name:sName,value:"gluerepair",displayName:"Glue Repair"})%>
        <%- include('checkbox',{name:sName,value:"quartercrackrepair",displayName:"Quarter Crack Repair"})%>
        <%- include('checkbox',{name:sName,value:"resection",displayName:"Resection"})%>
        <%- include('checkbox',{name:sName,value:"rehabilitation",displayName:"Rehabilitation Service"})%>
        <%- include('checkbox',{name:sName,value:"surgeonconsult",displayName:"Surgeon Consult"})%>
    </div>
</div>
